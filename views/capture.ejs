<%- include('header'); -%>
<body>
    <div class="container">
        <h1>Create Bug</h1>
        <form name="userForm" method="POST" action="/saveBug">
            <div class="form-group">
                <label for="ftitle">Title</label>
                <input type="text" class="form-control" id="ftitle" name="ftitle" placeholder="Defect title here...">
            </div>
            <div class="form-group">
                <label for="fdesc">Description</label>
                <textarea class="form-control" id="fdesc" name="fdesc"></textarea>
            </div>
            <div class="form-group">
                <label for="fassignee">Assign To</label>
                <input type="text" class="form-control" id="fassignee" name="fassignee">
            </div>
            <input type="submit" value="Save" class="btn btn-primary"/>
        </form>
    </div>
</body>

